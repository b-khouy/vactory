<?php

/**
 * @file
 * Primary hooks for Press Release.
 */

/**
 * Implements hook_theme().
 */
function vactory_press_release_theme() {
  return [
    // Node > card.
    'node__vactory_press_release__card'        => [
      'base hook' => 'node',
      'template'  => 'card',
    ],
    // Node > card inline.
    'node__vactory_press_release__card_inline' => [
      'base hook' => 'node',
      'template'  => 'card-inline',
    ],
    // Node > Masonry.
    'node__vactory_press_release__masonry'     => [
      'base hook' => 'node',
      'template'  => 'masonry',
    ],
    // Node > full.
    'node__vactory_press_release__full'        => [
      'base hook' => 'node',
      'template'  => 'full',
    ],
  ];
}

/**
 * Implements hook_preprocess_node().
 */
function vactory_press_release_preprocess_node(&$variables) {
  /** @var \Drupal\node\Entity\Node $node */
  $node = $variables['node'];

  if ($node->getType() == 'vactory_press_release') {
    if (isset($node->field_vactory_image)) {
      $node->field_vactory_image[0]->title = $node->label();
    }
  }
}
