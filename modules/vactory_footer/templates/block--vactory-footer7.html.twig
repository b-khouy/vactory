        <div class="vf-footer__top">
            <div class='container'>
                <div class='vf-footer__top--items'>
                    <div class="block-footer-menu-separate sm-menu-center">
                        {{ vactory_render('block', 'system_branding_block', {use_site_name: false}) }}
                    </div> 
                    <div class="block-social-media icon-shadow">
                        {{ vactory_render('block', 'socialmedialinks') }}
